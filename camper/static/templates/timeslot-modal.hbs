<div class="modal" id="add-timeslot-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{_ 'Add new timeslot'}}</h4>
            </div>
            <div class="modal-body">
                <form name="timeslot_form" class="form-horizontal" role="form" id="add-timeslot-form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{_ 'Time'}}</label>
                        <div class="col-sm-2">
                            <input type="text" 
                                class="form-control" 
                                id="timepicker" 
                                value="{{time}}" 
                                name="time" 
                                required 
                                placeholder="{{_ 'e.g. 11:00'}}">
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{_ 'Blocked?'}}</label>
                        <div class="col-sm-10">
                            <input type="checkbox" class="form-control" name="blocked" required>
                            <span class="help-block">
                                {{_ 'Select if this time slot is blocked, e.g. because of a break. This means you cannot add sessions in this slot.'}}
                            </span>
                        </div>
                    </div>
                    {{!--
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Reason for blocking</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="reason" required placeholder="e.g. lunch break">
                        </div>
                    </div> 
                    --}}
                </form>

            </div>
            <div class="modal-footer">
                <button id="add-timeslot-button" class="btn btn-primary">{{_ 'Add new timeslot'}}</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">{{_ 'Close'}}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
